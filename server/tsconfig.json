{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["server/*.ts"],
    "exclude": ["node_modules"],
    "prettier": {
      "semi": false,
      "singleQuote": true,
      "printWidth": 80
    }
  }
  